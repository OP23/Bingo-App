<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Welcome To The Bingo Game"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/generator_bingo_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Generate Bingo Numbers"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/generator_new_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generator_bingo_numbers"
        android:layout_centerHorizontal="true"
        android:text="Create Bingo Number" />

    <Button
        android:id="@+id/generator_bingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generator_new_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="BINGO!" />

    <TextView
        android:id="@+id/generator_generated_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generator_bingo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Number List"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/generator_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Main Menu" />

    <Button
        android:id="@+id/generator_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Continue"
        android:visibility="invisible" />

</RelativeLayout>
