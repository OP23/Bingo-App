<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Clear Game History"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/clear_clear_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/clear_updated_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/clear_list_item"
        android:layout_marginTop="30dp"
        android:hint="Updated List"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/clear_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear_updated_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Clear" />

    <Button
        android:id="@+id/clear_mainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Menu" />

    <EditText
        android:id="@+id/clear_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/clear_clear_options"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Specify The Item"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/clear_remove_gameplay_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/clear_clear_options"
        android:layout_marginTop="30dp"
        android:text="Remove Game Play Number:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

</RelativeLayout>
